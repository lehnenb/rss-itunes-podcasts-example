{
  "name": "integration-specs",
  "version": "0.1.0",
  "description": "Integration specs for podcast application",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "lint": "yarn run prettier --write .",
    "lint:check": "yarn run eslint .",
    "server:build": "yarn run ts-node bin/buildServer.ts",
    "server:start": "docker run -i --rm -p 5000:5000 -p 5001:5001 --name podcast-integration-test podcast-integration-test-app",
    "server:run": "yarn run server:build && yarn run server:start",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "yarn run start-server-and-test server:run http-get://localhost:5001/healthcheck cy:run",
    "test:open": "yarn run start-server-and-test server:run http-get://localhost:5001/healthcheck cy:open"
  },
  "devDependencies": {
    "@types/node": "^14.11.5",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "cypress": "^5.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "prettier": "^2.1.2",
    "start-server-and-test": "^1.11.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
